       --h:[%2%]("[*R:[&_ggmPrefix]_name]")|[$_ggmTmpRoll.Total]
    --]|
    --Rnext|
    --?"[*R:global_save_name]" -ne "NoRepeatingAttributeLoaded"|_ggmLoop
